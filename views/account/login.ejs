<%
	var localMeta = {
		title: 'Login',
	};
%>
<%- include('../base/base_header.ejs', {meta: localMeta}) %>
<div class="container mt-5">
	<div class="row justify-content-center">
		<div class="col-md-6">
			<div class="card">
				<div class="card-body">
					<h1 class="card-title text-center">Login</h1>
					<form action="/login" method="post">
						<div class="form-group">
							<label for="username">Username</label>
							<input type="text" class="form-control" id="username" name="username" placeholder="Username" maxlength="20" autocomplete="off" required />
						</div>
						<div class="form-group">
							<label for="password">Password</label>
							<input type="password" class="form-control" id="password" name="password" placeholder="Password" maxlength="20" required />
						</div>
						<div id="error-tooltip"></div>
						<div class="d-flex justify-content-between">
							<a href="/signup" class="btn btn-secondary btn-block mt-4">アカウントを作成</a>
							<button type="submit" class="btn btn-primary btn-block mt-4">ログイン</button>
						</div>
						<% if (typeof error === 'string') { %>
						<div class="error">
							<%= error %>
						</div>
						<% } %>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>
<%- include('../base/_footer.ejs') %>
