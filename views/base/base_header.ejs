<%
	var localMeta = {
		title: meta?.title ?? "",
		styles: ['https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css', ...(meta?.styles ?? [])],
		scripts: ['https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js', ...(meta?.scripts ?? [])],
	};
%>
<%- include('_header.ejs', {meta: localMeta}) %>
<nav class="navbar navbar-expand-lg navbar-light bg-light">
	<a class="navbar-brand ms-3" href="/">クイズゲーム</a>
	<div class="d-flex flex-grow-1 align-items-center justify-content-end" id="navbarNav">
		<ul class="navbar-nav flex-row">
			<% if (!username) { %>
			<li class="nav-item">
				<a class="nav-link" href="/login">Login</a>
			</li>
			<li class="nav-item border rounded mx-3">
				<a class="nav-link p-2" href="/signup">Signup</a>
			</li>
			<% } else { %>
			<li class="nav-item">
				<a class="nav-link" href="/game/menu">Hello, <%= username %></a>
			</li>
			<li class="nav-item border rounded mx-3">
				<a class="nav-link p-2" href="/logout">Logout</a>
			</li>
			<% } %>
		</ul>
	</div>
</nav>
